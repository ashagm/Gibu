<link rel="stylesheet" href="css/forms.css" />
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Create a new campaign </h1>
      <form action="/newcampaign" method="post">
          <div class="form-group">
            <label>Campaign Title</label>
            <br>
            <input class="campaignInputs" id="campaignTitle" name="campaignTitle" placeholder="Enter Gibu Campaign Title" type="text">
          </div>
          <div class="form-group">
            <label>Include an image for your Campaign</label>
             <br>
            <input class="campaignInputs" id="imageUrl" name="imageUrl" placeholder="Enter Image Url" type="text">
          </div>
          <div class="form-group">
            <label for="exampleTextarea">Campaign Description</label>
             <br>
            <textarea class="campaignInputs" id="description" name="description" placeholder="Enter Campaign Description" rows="3"></textarea>
          </div>
          <div class="form-group">
            <label>How much do you want to raise?</label>
             <br>
            <input class="campaignInputs" id="amount" name="amount" placeholder="$" type="text">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>

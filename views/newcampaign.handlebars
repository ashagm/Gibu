<link rel="stylesheet" href="css/forms.css" />
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="nice-form-campaign">
        <h1>Create a new campaign </h1>
        <form action="/newcampaign" method="post">
          <div class="form-group">
            <label for='campaign-title'>Campaign Title</label>
            <input id="campaignTitle" name="campaignTitle" placeholder="enter Gibu campaign title" type="text" />
          </div>
          <div class="form-group">
            <label for='campaign-imageUrl'>Campaign Image url</label>
            <input id="imageUrl" name="imageUrl" placeholder="enter image url" type="text">
          </div>
          <div class="form-group">
            <label for="campaign-description">Campaign Description</label>
            <textarea class="form-control" id="description" name="description" placeholder="enter campaign description" rows="5" id="comment"></textarea>
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>

